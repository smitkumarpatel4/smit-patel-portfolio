{
  "name": "smit-patel-portfolio",
  "version": "1.0.0",
  "description": "Smit Patel's personal portfolio website showcasing professional experience and projects",
  "main": "index.html",
  "scripts": {
    "start": "serve .",
    "dev": "live-server --port=3000 --open=/",
    "build": "echo 'Static site - no build process required'",
    "lint:html": "htmlhint index.html",
    "lint:css": "stylelint assets/css/*.css",
    "lint:js": "eslint assets/js/*.js",
    "validate": "npm run lint:html && npm run lint:css && npm run lint:js",
    "optimize": "npm run optimize:images && npm run optimize:css && npm run optimize:js",
    "optimize:images": "echo 'Add image optimization script here'",
    "optimize:css": "cleancss -o assets/css/styles.min.css assets/css/styles.css",
    "optimize:js": "uglifyjs assets/js/main.js -o assets/js/main.min.js",
    "deploy": "echo 'Add deployment script here'"
  },
  "keywords": [
    "portfolio",
    "personal-website",
    "resume",
    "developer",
    "java",
    "web-development",
    "fda-compliance",
    "crm-systems"
  ],
  "author": {
    "name": "Smit Patel",
    "email": "smit.patel@email.com",
    "url": "https://smitpatel.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smit-patel/smit-patel-portfolio.git"
  },
  "homepage": "https://smitpatel.dev",
  "bugs": {
    "url": "https://github.com/smit-patel/smit-patel-portfolio/issues"
  },
  "devDependencies": {
    "serve": "^14.2.0",
    "live-server": "^1.2.2",
    "htmlhint": "^1.1.4",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "dependencies": {},
  "optionalDependencies": {
    "sharp": "^0.32.5"
  }
}

